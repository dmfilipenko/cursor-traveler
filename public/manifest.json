{
  "manifest_version": 3,

  "name": "Cursor Traveler: mouse move counter",
  "description": "Count how many moves make your mouse",
  "version": "2.0.5",

  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "action": {
    "default_icon": "icons/128.png",
    "default_popup": "public/popup.html"
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["src/content.ts"],
    "all_frames": true
  }],

  "background": {
    "service_worker": "src/background.ts"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "storage",
    "alarms"
  ]
}
